<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="foo"
            type="int" />
    </data>
    <!--This is the backdrop's content with a BottomSheetBehaviour applied to it-->

    <LinearLayout
        android:id="@+id/bottom_sheet_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_bottom_sheet"
        android:orientation="vertical"
        android:padding="16dp"
        app:behavior_peekHeight="96dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


        <!--This is the backdrop's header with a title and icon-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:elevation="4dp"
            android:focusable="true"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cancel_navigation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_cancel_black_72dp"
                android:layout_margin="2dp"
                android:background="?attr/selectableItemBackgroundBorderless"

                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_margin="2dp"
                >

                <TextView
                    android:id="@+id/time_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="2 min"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/meters_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="400 Steps | 200 meters"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            </LinearLayout>
            <ImageView
                android:id="@+id/expand_bottom_sheet_image_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_expand_more"
                android:layout_margin="2dp"
                android:background="?attr/selectableItemBackgroundBorderless"

                />
        </LinearLayout>

        <!--And finally this is the body of the backdrop's content. You can add here whatever you need inside a view group (LinearLayout, RelativeLayout, SwipeRefreshLayout, ConstraintLayout, etc.)-->

        <!--The content's body goes here-->

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/spacing_xlarge">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/navigation_detail_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Navigating to the The Cineplex on Fourth Floor."
                        android:textColor="@android:color/black"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        />

                    <!--<com.google.android.material.button.MaterialButton-->
                        <!--android:id="@+id/call_reception_button"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_margin="8dp"-->
                        <!--android:padding="8dp"-->
                        <!--android:text="Call Reception"-->
                        <!--android:textAllCaps="true"-->
                        <!--android:textAppearance="@style/TextAppearance.AppCompat.Subhead"-->
                        <!--app:backgroundTint="@android:color/black"-->
                        <!--app:icon="@drawable/ic_phone_"-->
                        <!--app:iconGravity="textStart" />-->


                </LinearLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</layout>